<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/metallic_violet"
        tools:context=".presentation.HomeFragment">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:background="@drawable/background_metallic_blue"
            android:layout_marginTop="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_won_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0 Won"
            android:textSize="26sp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_back" />

        <TextView
            android:id="@+id/tv_lost_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0 Lost"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="@id/tv_won_count"
            app:layout_constraintEnd_toEndOf="@id/tv_won_count"
            app:layout_constraintTop_toBottomOf="@id/tv_won_count"/>

        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leaderboard"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_lost_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>