<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/metallic_violet"
        tools:context=".presentation.LevelsFragment">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:background="@drawable/background_metallic_blue"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_level_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_1"
            android:background="@drawable/background_metallic_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_level_two"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            app:layout_constraintBottom_toTopOf="@id/btn_level_three" />

        <Button
            android:id="@+id/btn_level_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_2"
            android:background="@drawable/background_metallic_blue"
            app:layout_constraintStart_toEndOf="@id/btn_level_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            app:layout_constraintBottom_toTopOf="@id/btn_level_four" />

        <Button
            android:id="@+id/btn_level_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_3"
            android:background="@drawable/background_metallic_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_level_four"
            app:layout_constraintTop_toBottomOf="@id/btn_level_one"
            app:layout_constraintBottom_toTopOf="@id/btn_level_five" />

        <Button
            android:id="@+id/btn_level_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_4"
            android:background="@drawable/background_metallic_blue"
            app:layout_constraintStart_toEndOf="@id/btn_level_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_level_two"
            app:layout_constraintBottom_toTopOf="@id/btn_level_six" />

        <Button
            android:id="@+id/btn_level_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_5"
            android:background="@drawable/background_metallic_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_level_six"
            app:layout_constraintTop_toBottomOf="@id/btn_level_three"
            app:layout_constraintBottom_toTopOf="@id/btn_level_seven" />

        <Button
            android:id="@+id/btn_level_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_6"
            android:background="@drawable/background_metallic_blue"
            app:layout_constraintStart_toEndOf="@id/btn_level_five"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_level_four"
            app:layout_constraintBottom_toTopOf="@id/btn_level_eight" />

        <Button
            android:id="@+id/btn_level_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_7"
            android:background="@drawable/background_metallic_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_level_eight"
            app:layout_constraintTop_toBottomOf="@id/btn_level_five"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/btn_level_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_8"
            android:background="@drawable/background_metallic_blue"
            app:layout_constraintStart_toEndOf="@id/btn_level_seven"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_level_six"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>